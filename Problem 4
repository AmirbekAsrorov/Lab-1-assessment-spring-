#include<iostream>
#include<string>
using namespace std;

//Problem 4: 

class Animal{
protected:
    int energy;
public:
    Animal(int energy=50){
        this->energy=energy;
    }
    void sleep(){
        cout<<"I'm sleeping."<<endl;
        energy++;
    }
    void eat(){
        cout<<"I'm eating."<<endl;
        energy++;
    }
    int getEnergy()const{
        return energy;
    }
};
class Dog:public Animal{
private:
    string name;
public:
    Dog(const string& name):Animal(){
        this->name=name;
    }
    void bark(){
        cout<<"Bark!"<<endl;
        energy--;
    }
    void run(){
        cout<<"Running!"<<endl;
        energy-=3;
    }
};
int main(){
    Dog dog1("Max");
    for(int i=4;i<9;i++){
        dog1.sleep();
        dog1.run();
    }
    dog1.eat();
    dog1.bark();
    cout<<dog1.getEnergy()<<endl;
    return 0;
} 


//Output of Problem 4:
//I'm sleeping.
//Running!
//I'm sleeping.
//Running!
//I'm sleeping.
//Running!
//I'm sleeping.
//Running!
//I'm eating.
//Bark!
//43




